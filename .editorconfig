# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{Makefile,makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
